{{#if @config.custom.shareFacebook}}
 <a href="https://www.facebook.com/sharer/sharer.php?u={{encodeUrlFragment url}}" class="js-share facebook" title="{{ translate 'partials.shareButtons.shareWithFacebook' }}" rel="nofollow noopener noreferrer">
    <svg aria-hidden="true" focusable="false" viewBox="0 0 32 32">
        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#facebook" />
    </svg> {{ translate 'partials.shareButtons.shareWithFacebook' }}
</a>
{{/if}}

{{#if @config.custom.shareTwitter}}
<a href="https://twitter.com/share?url={{encodeUrlFragment url}}&amp;via={{#if @config.custom.shareTwitterName}}{{encodeUrlFragment @config.custom.shareTwitterName}}{{else}}{{encodeUrlFragment @website.name}}{{/if}}&amp;text={{encodeUrlFragment title}}
" class="js-share twitter" title="{{ translate 'partials.shareButtons.shareWithTwitter' }}" rel="nofollow noopener noreferrer">
    <svg aria-hidden="true" focusable="false" viewBox="0 0 32 32">
        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#twitter" />
    </svg> {{ translate 'partials.shareButtons.shareWithTwitter' }}
</a>
{{/if}}

